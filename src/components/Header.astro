---
import Button from '../components/Button.astro';
---

<div x-data="{ showmenu: false }" class="fixed lg:static w-full mb-5 px-10 bg-back z-[150]">
    <div id="navbar" class="flex flex-row justify-between">
        <div id="logo" class="md:w-52 mt-[-10px]">
            <a href="/"><img class="hidden md:block" src="/logo.svg" alt="Logo"></a>
        </div>
        
        <nav id="desktopmenu" class="hidden lg:block text-white">
            <ul class="flex flex-row gap-4 space-x-10 font-Rubik text-[17px] md:mt-11">
                <li class="hover:text-orange"><a href="#link1">Hvad er plasticforurening</a></li>
                <li class="hover:text-orange"><a href="#link2">Hvad kan du gøre</a></li>
                <li class="hover:text-orange"><a href="#link3">Hvem er Plastic Change</a></li>
                <li class="hover:text-orange"><a href="#link4">Shop</a></li>
                <!-- Button as link -->
                <li class="mt-[-8px]">
           <a href=""><Button variant="primary" size="medium">Støt nu</Button></a>  
                </li>
            </ul>
        </nav>
        
        <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = !showmenu">
            <img class="w-14 pt-5" src="/mb.logo.svg" alt="Menu">
        </button>
    </div>
    
    <!-- Mobile Menu -->
    <nav id="mobilmenu" class="flex flex-col content-center bg-orange mt-3" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
        <ul class="font-bold">
            <li class="text-center py-2 border-y-2"><a href="#link1">Hvad er plasticforurening</a></li>
            <li class="text-center py-2 border-b-2"><a href="#link2">Hvad kan du gøre</a></li>
            <li class="text-center py-2 border-b-2"><a href="#link3">Hvem er Plastic Change</a></li>
            <li class="text-center py-2 border-b-2"><a href="#link4">Shop</a></li>   
        </ul>
    </nav>
</div>
